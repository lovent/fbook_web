<!--Begin section-->
<section id="section">
    <div class="space-40"></div>
    <div class="container">
        <div class="row">
            <div class="col-xs-12 col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3 text-center">
                <h2><strong><%= __('Waiting approve') %></strong></h2>
                <div class="title-bar blue">
                    <ul class="list-inline list-unstyled">
                        <li><i class="icofont icofont-square"></i></li>
                        <li><i class="icofont icofont-square"></i></li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="space-20"></div>
        <div class="row">
            <% if (books.items.data.length) { %>
                <% books.items.data.forEach(function (book) { %>
                    <div class="col-xs-12 col-sm-8 col-sm-offset-2 col-md-9">
                        <div class="row event-list">
                            <div class="event-item wow fadeInRight">
                                <h4 class="show tip-left"><span class="">Ngay yeu cau:</span></h4>
                                <div class="well">
                                    <div class="media">
                                        <div class="media-left">
                                            <img onclick="window.open('/books/<%= book.id %>', '_self')" 
                                                src="<%= book.image ? book.image.web.thumbnail_path : '/images/book_thumb_default.jpg' %>"
                                                class="media-object img-avatar-book" 
                                                alt="<%= book.title %>">
                                        </div>
                                        <div class="media-body">
                                            <h5 title="<%= book.title %>" 
                                                onclick="window.open('/books/<%= book.id %>', '_self')"
                                                data-toggle="tooltip">
                                                <%= book.title ? getString(book.title) : __('No title') %>
                                            </h5>
                                            <a href="/users/<%= user.id %>"><h4 class="media-heading"> Ten nguoi muon: <br> [Email nguoi muon]</h4></a>
                                            <span class="label label-warning lbl-waiting<%= user.id %>"><%= __('Waiting') %></span>
                                            <span class="text-success"><%= __('Time want to borrow') %>:</span>
                                            <div class="space-10"></div>
                                        </div>
                                        <div class="media-right">
                                            <a class="btn btn-primary btn-xs btn-approve btn-approve-waiting<%= user.id %>"><%= __('Approve') %></a>
                                        </div>
                                        <div class="media-right">
                                            <a class="btn btn-danger btn-xs btn-remove btn-remove-waiting<%= user.id %>"><%= __('Remove this request') %></a>
                                        </div>
                                    </div>
                            </div>
                        </div>
                    </div>
                <% }) %>
            <% } else { %>
                <center><h4> <%= __('No book waiting to approve') %> </h4></center>
            <% } %>
        </div>
        <% if (books.items.total > books.items.per_page) { %>
            <div class="space-60"></div>
            <div class="row text-center">
                <div class="col-xs-12">
                    <div class="shop-pagination pull-right">
                        <ul id="pagination-book" class="pagination-sm pagination">
                        </ul>
                    </div>
                </div>
            </div>
        <% } %>
    </div>
</section>
<!--End section-->

<%- contentFor('appjs') %>
<script type="text/javascript" src="/javascripts/books/book.js"></script>
<script type="text/javascript" src="/javascripts/paginations/paginate.js"></script>
<script type="text/javascript" src="/bower/bootstrap-star-rating/js/star-rating.js"></script>
<script type="text/javascript">
    var totalPages = Math.ceil("<%= books.items.total %>"/"<%= books.items.per_page %>");
    var currentPage = parseInt("<%= books.items.current_page %>");
    var nextPage = "<%= books.items.next_page %>"

    if (totalPages) {
        Paginate.book({
            totalPages: totalPages,
            currentPage: currentPage,
            nextPage: nextPage
        });
    }
</script>

<%- contentFor('appCss') %>
<link type="text/css" href="/bower/bootstrap-star-rating/css/star-rating.css" rel="stylesheet">
